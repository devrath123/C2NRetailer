<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_home_offer_card"
    android:layout_width="250dp"
    android:layout_height="210dp"
    android:layout_gravity="center"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_offer_activeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Currently Not Active"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/tv_offerCardName"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Offer Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:id="@+id/layout_active_offercard_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_offercard_discount_perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@android:color/black"
                android:textSize="80sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_discount_perc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@android:color/black"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tv_discount_off_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" OFF"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_offercard_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/01/18"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_offer_date_to_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  to  "
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_offercard_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/09/18"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:text="(" />-->

            <TextView
                android:id="@+id/tv_offercard_applicable_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Mon" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text=")" />-->
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>